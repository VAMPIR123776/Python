# Сообщить в какой четверти координатной плоскости или на какой оси находится точка с координатами Х и У

x = int (input("Введите точку х: "))
y = int (input("Введите точку y: "))

if x == 0 or y == 0:
    print("x и y не должны быть 0")
elif x > 0 and y > 0:
    print("Точка находится в 1 четверти")
elif x > 0 and y < 0:
    print("Точка находится в 4 четверти")
elif x < 0 and y > 0:
    print("Точка находится в 2 четверти")
else:
    print("Точка находится в 3 четверти")    


# Указав номер четверти прямоугольной системы координат, показать допустимые значения координат для точек этой четверти
number = int (input("Введите номер четверти: "))

if number < 1 or number > 4:
    print("Ошибка")
elif number == 1:
    print("x От 1 до бесконечности, y = От  1 до бесконесности")
elif number == 2:
    print("x От 1 до бесконечности, y = От -1 до -бесконесности")
elif number == 3:
    print("x От -1 до -бесконечности, y = От -1 до -бесконесности")
else:
    print("x От -1 до -бесконечности, y = От 1 до бесконесности")  

# Найти расстояние между двумя точками пространства
import math

ax = int (input("Введите точку А(x): "))
ay = int (input("Введите точку А(у): "))
az = int (input("Введите точку А(z): "))

bx = int (input("Введите точку B(x): "))
by = int (input("Введите точку B(у): "))
bz = int (input("Введите точку B(z): "))

n = math.sqrt(((ax - bx) ** 2) + ((ay - by) ** 2) + ((az - bz) ** 2))
print(f'Расстояние между А и В: {round(n,2)}')
